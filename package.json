{
  "name": "personal-portfolio",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "next build",
    "postbuild": "next-sitemap",
    "build:prod": "next build",
    "dev": "next dev",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css,md}\"",
    "lint": "eslint src jest.setup.ts",
    "lint:ci": "eslint src jest.setup.ts --max-warnings=0",
    "serve:prod": "next start --hostname 0.0.0.0 --port 3000",
    "start": "next start",
    "test": "jest",
    "test:ci": "jest --ci",
    "test:coverage": "jest --ci --coverage",
    "typecheck": "tsc --noEmit",
    "verify": "npm run lint:ci && npm run typecheck && npm run test:ci && npm run build:prod",
    "ci": "npm run verify",
    "vercel:build": "next build",
    "warmup": "bash ./scripts/warmup.sh",
    "lhci": "npx --yes @lhci/cli autorun --config=./lighthouserc.json",
    "prepare": "node ./scripts/install-husky.mjs"
  },
  "dependencies": {
    "@vercel/analytics": "^1.5.0",
    "@vercel/edge-config": "^1.4.3",
    "@vercel/speed-insights": "^1.2.0",
    "class-variance-authority": "^0.7.1",
    "classix": "^2.2.5",
    "lucide-react": "^0.553.0",
    "next": "16.0.1",
    "next-themes": "^0.4.6",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "16.0.3",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.22",
    "eslint": "9.39.1",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.7",
    "next-sitemap": "^4.2.3",
    "postcss": "^8.4.38",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0"
  }
}
