{
  "name": "personal-portfolio",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "next build",
    "postbuild": "next-sitemap",
    "build:prod": "next build",
    "dev": "next dev",
    "format": "biome format --write . --files-ignore-unknown=true",
    "lint": "biome lint . --files-ignore-unknown=true",
    "lint:ci": "biome check . --files-ignore-unknown=true",
    "serve:prod": "next start --hostname 0.0.0.0 --port 3000",
    "start": "next start",
    "test": "jest",
    "test:ci": "jest --ci",
    "test:coverage": "jest --ci --coverage",
    "typecheck": "tsc --noEmit",
    "verify": "npm run lint:ci && npm run typecheck && npm run test:ci && npm run build:prod",
    "ci": "npm run verify",
    "vercel:build": "next build",
    "lhci": "npx --yes @lhci/cli autorun --config=./lighthouserc.json",
    "prepare": "husky"
  },
  "dependencies": {
    "@vercel/analytics": "^1.6.1",
    "@vercel/edge-config": "^1.4.3",
    "@vercel/speed-insights": "^1.3.1",
    "class-variance-authority": "^0.7.1",
    "classix": "^2.2.6",
    "@mdx-js/react": "^3.1.1",
    "next": "^16.1.0",
    "next-themes": "^0.4.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@mdx-js/loader": "^3.1.1",
    "@next/mdx": "^16.1.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.23",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.7",
    "msw": "^2.12.7",
    "next-sitemap": "^4.2.3",
    "postcss": "^8.4.38",
    "@biomejs/biome": "^2.3.10",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.9.3"
  }
}
